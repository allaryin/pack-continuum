  # Text that will be replaced in messages sent TO the game
  # Format: "word-to-replace"="word-replaced"
  "&"="ยง"
  ":smiley:"=":)"
  ":smile:"=":D"
  ":joy:"=";D"
  ":laughing:"="XD"
  ":frowning:"=":("
  ":sob:"=";("
  ":tired_face:"="x("
  ":wink:"=";)"
  ":stuck_out_tongue:"=":P"
  ":stuck_out_tongue_winking_eye:"=";P"
  ":stuck_out_tongue_closed_eyes:"="xP"
  ":open_mouth:"=":O"
  ":dizzy_face:"="xO"
  ":neutral_face:"=":|"
  ":sunglasses:"="B)"
  ":kissing:"=":*"
  ":heart:"="<3"

